{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "@images/*": ["../public/images/*"],
      "@fonts/*": ["../public/fonts/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@games/*": ["games/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@contexts/*": ["contexts/*"],
      "@configs/*": ["configs/*"],
      "@hooks/*": ["hooks/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
